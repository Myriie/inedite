<style>



td {
	border: solid black 1px;
}


</style>

<h1>Bienvenue sur la page de gestion des articles de la boutique</h3>

	<a href="/article">Creer un nouvel article</a><br />

	<table>
  		<tr>
	       	<th>Titre</th>
	       	<th>Desciption</th>
	       	<th>Prix</th>
	       	<th>Type</th>
	       	<th>Combinaisons disponibles</th>
	       	<th>Modifier</th>
	       	<th>Supprimer</th>
	  	</tr>

	  		<% @articles.each do |art| %>
	  	
	  			<tr>
			       	<td> <%= art.title %> 
			    
			       	<td> <%= art.description %> 
			    
			       	<td> <%= art.price%>â‚¬
			    
			       	<td> <%= art.type_art %>
			    
			       	<td>	<% if art.clothes.any? %>
			       				<% @vet = art.clothes.find(:all)%>
				       			<% @vet.each do |v| %>
				       				<%= v.color %>
				       				<%= v.size%>
				       				<br />
				       			<% end %>
	        				<% end %> 
	        	
	        		<td> 
	        			<%= form_tag("/edit", method: "get") do %>
					  	<%= hidden_field_tag(:id, art.id) %>
					  	<%= submit_tag("Modifier") %>
						<% end %>

	        		<td>
	        			<%= form_tag("/delete", method: "get") do %>        				
					  	<%= hidden_field_tag(:id, art.id) %>
					  	<%= submit_tag("Supprimer") %>
						<% end %>
				</tr>
		
			<% end %>
	</table>