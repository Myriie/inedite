
<% @type_art = Article.find(:all, :select => 'DISTINCT type_art')%>



<p>
  <%= form_for @article do |f| %>
    <%= render 'error_messages' %>
    <%= f.label :titre %>
      <%= f.text_field :title %>
    <%= f.label :description %>
      <%= f.text_area :description, size: "60x12" %>
    <%= f.label :prix %>
      <%= f.text_field :price %>
    <%= f.label :type_article %>
      <%= collection_select(:article, :type_art, @type_art, :type_art, :type_art, options ={:prompt => "-Type de l'article"}, :class =>"type_art")%> 
    </br>

    <div class="actions">
      <%= f.submit "Soumettre" %>
    </div>
  <% end %>
</p>

