<% provide(:title, @article.title) %>

<h1><%= @article.title %></h1>

<p><%= @article.description %></p>
<p>Prix : <%= @article.price %>â‚¬</p>

<div class="span8">
    <% if @article.clothes.any? %>
        <ol class="clothes">
        	<% @taille = @article.clothes.find(:all, :select => 'DISTINCT size')%>
			<% @couleur = @article.clothes.find(:all, :select => 'DISTINCT color')%>
				<p>Disponible en:
					<ul>
						Taille: <br />
						<%= collection_select(:clothe, :id, @taille, :id, :size, options ={:prompt => "-Choisir une taille"}, :class =>"taille") %><br />
						Couleur:<br />
						<%= collection_select(:clothe, :id, @couleur, :id, :color, options ={:prompt => "-Couleurs disponibles"}, :class =>"taille") %>

					</ul>
				</p>
	    </ol>
    <% end %>
</div>


